<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Frame name="mnkBagsMainSettings" hidden="false" virtual="true">
        <Size x="500" y="145"/>
        <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\Buttons\WHITE8x8">
            <EdgeSize>
                <AbsValue val="1" />
            </EdgeSize>
            <Color r="0" g="0" b="0" a="0.6" />
            <BorderColor r="0.3" g="0.3" b="0.3" a="1" />
        </Backdrop>
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentName" inherits="GameFontNormal" text="mnkBags_LOCALE_MAIN_SETTINGS">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="15" y="-5"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <CheckButton name="$parentAutoSellJunk" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentName" relativePoint="BOTTOMLEFT" x="5" y="-5" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, mnkBags_LOCALE_SELL_JUNK, mnkBags_TYPE_MAIN, mnkBags_SETTING_SELL_JUNK)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentDepositReagents" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentAutoSellJunk" relativePoint="RIGHT" x="140" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, mnkBags_LOCALE_DEPOSIT_REAGENT, mnkBags_TYPE_MAIN, mnkBags_SETTING_DEPOSIT_REAGENT)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentStackAllItems" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentDepositReagents" relativePoint="RIGHT" x="140" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, mnkBags_LOCALE_STACK_ALL, mnkBags_TYPE_MAIN, mnkBags_SETTING_STACK_ALL, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentClearNewItems" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentAutoSellJunk" relativePoint="BOTTOMLEFT" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, mnkBags_LOCALE_CLEAR_NEW_ITEMS_CLOSE, mnkBags_TYPE_MAIN, mnkBags_SETTING_CLEAR_NEW_ITEMS)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <Slider name="$parentScaleSlider" inherits="mnkBagsSettingsSliderTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentClearNewItems" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="0" y="-32"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsSlider(self, mnkBags_LOCALE_SCALE, 0.5, 2, 0.1, mnkBags_TYPE_MAIN, mnkBags_SETTING_SCALE)
                    </OnShow>
                </Scripts>
            </Slider>
        </Frames>
    </Frame>
</Ui>

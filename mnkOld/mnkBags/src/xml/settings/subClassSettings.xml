<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Frame name="mnkBagsSubClassSettings" hidden="false" virtual="true">
        <Size x="500" y="150"/>
        <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\Buttons\WHITE8x8">
            <EdgeSize>
                <AbsValue val="1" />
            </EdgeSize>
            <Color r="0" g="0" b="0" a="0.6" />
            <BorderColor r="0.3" g="0.3" b="0.3" a="1" />
        </Backdrop>
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentName" inherits="GameFontNormal" text="mnkBags_LOCALE_SUB_CLASS_SETTINGS">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="15" y="-5"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <CheckButton name="$parentArmorCheckBox" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentName" relativePoint="BOTTOMLEFT" x="5" y="-5" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, AUCTION_CATEGORY_ARMOR, mnkBags_TYPE_SUB_CLASS, LE_ITEM_CLASS_ARMOR, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentConsumableCheckBox" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentArmorCheckBox" relativePoint="RIGHT" x="140" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, AUCTION_CATEGORY_CONSUMABLES, mnkBags_TYPE_SUB_CLASS, LE_ITEM_CLASS_CONSUMABLE, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentGemsCheckBox" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentConsumableCheckBox" relativePoint="RIGHT" x="140" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, AUCTION_CATEGORY_GEMS, mnkBags_TYPE_SUB_CLASS, LE_ITEM_CLASS_GEM, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentGlyphCheckBox" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="TOP" relativeTo="$parentArmorCheckBox" relativePoint="BOTTOM" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, AUCTION_CATEGORY_GLYPHS, mnkBags_TYPE_SUB_CLASS, LE_ITEM_CLASS_GLYPH, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentItemEnhancementCheckBox" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentGlyphCheckBox" relativePoint="RIGHT" x="140" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, AUCTION_CATEGORY_ITEM_ENHANCEMENT, mnkBags_TYPE_SUB_CLASS, LE_ITEM_CLASS_ITEM_ENHANCEMENT, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentMiscCheckBox" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentItemEnhancementCheckBox" relativePoint="RIGHT" x="140" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, AUCTION_CATEGORY_MISCELLANEOUS, mnkBags_TYPE_SUB_CLASS, LE_ITEM_CLASS_MISCELLANEOUS, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentRecipesCheckBox" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="TOP" relativeTo="$parentGlyphCheckBox" relativePoint="BOTTOM" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, AUCTION_CATEGORY_RECIPES, mnkBags_TYPE_SUB_CLASS, LE_ITEM_CLASS_RECIPE, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentTradeGoodsCheckBox" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentRecipesCheckBox" relativePoint="RIGHT" x="140" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, AUCTION_CATEGORY_TRADE_GOODS, mnkBags_TYPE_SUB_CLASS, LE_ITEM_CLASS_TRADEGOODS, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentWeaponsCheckBox" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentTradeGoodsCheckBox" relativePoint="RIGHT" x="140" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, AUCTION_CATEGORY_WEAPONS, mnkBags_TYPE_SUB_CLASS, LE_ITEM_CLASS_WEAPON, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentBOECheckBox" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="TOP" relativeTo="$parentRecipesCheckBox" relativePoint="BOTTOM" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, mnkBags_LOCALE_BOE, mnkBags_TYPE_SUB_CLASS, mnkBags_SETTING_BOE, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentBOACheckBox" inherits="mnkBagsSettingsCheckBoxTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentBOECheckBox" relativePoint="RIGHT" x="140" />
                </Anchors>
                <Scripts>
                    <OnShow>
                        mnkBagsInitSettingsCheckBox(self, mnkBags_LOCALE_BOA, mnkBags_TYPE_SUB_CLASS, mnkBags_SETTING_BOA, 2)
                    </OnShow>
                </Scripts>
            </CheckButton>
        </Frames>
    </Frame>
</Ui>
